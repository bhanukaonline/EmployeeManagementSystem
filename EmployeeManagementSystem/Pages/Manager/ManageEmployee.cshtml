@page
@model EmployeeManagementSystem.Pages.Manager.ManageEmployeeModel
@{
}
<h2>Manage Employees in the Department</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Address</th>
            <th>Age</th>
        </tr>
         
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Username</td>
                <td>@employee.Position</td>
                <td>@employee.Salary</td>
                <td>@employee.Address</td>
                <td>@employee.Age</td>
                <td>
                    <a asp-page="../Account/EditUser" class="btn btn-sm btn-outline-dark" asp-route-Id="@employee.Id">Edit</a>|
                    <form method="post" asp-page-handler="Delete">
                        <input type="hidden" name="id" value="@employee.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-dark">Delete</button>
                    </form>
                </td>
                
            </tr>
        }
</table>